pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Ahtisham0312/jenkins-lab.git'
            }
        }

        stage('Build') {
            steps {
                echo "Running build..."
                // Example commands:
                // sh 'npm install'
                // sh './mvnw clean package'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // Example:
                // sh 'npm test'
                // sh './mvnw test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying application..."
                // Example:
                // sh 'docker build -t myapp .'
                // sh 'scp target/app.jar user@server:/apps/'
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
